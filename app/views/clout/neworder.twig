<div class="app-content">
    <div id="PageTitle">New order</div>
    <div class="container-fluid">
      <section class="dashboard-head-wrapper">
            <div class="dashboard-head card-border">
              	<img src="https://cdn.mypanel.link/fsvxaw/pkemxikt27iwdbje.png" 
                     class="mascot-img" />
                <div class="dhead-body">
                    <h2 class="title">
                        Welcome to  {{ site["site_name"] }}!
                    </h2>
                    <p class="text">
                        <a href="/tickets">learn how</a> resell our services and have a steady monthly income! Need help, open a ticket and connect directly with our CEO. <a href="/tickets">Click here and talk to us.</a>
                    </p>
                </div>
            </div>
        </section>
      <div class="card card-border mt-5 mt-md-0 mb-4">
        <div class="card-body p-4">
          <div class="row align-items-center">
            <div class="col-auto">
              <div class="d-icon i-primary">
                <i class="ri-whatsapp-line"></i>
              </div>
            </div><!-- ./col-auto -->
            <div class="col">
              <span class="fw-600">Instantly submit Order, Recharge, Cancellation requests WITHOUT opening a ticket!</span>
            </div>
            <div class="col-md-auto col-12 mt-4 mt-md-0 ms-auto">
              <a target="_blank" rel="noreferrer" href="https://wa.me/923170705989" class="btn btn-primary btn-sm btn-block">Contact us</a>
            </div>
          </div>
        </div><!-- ./card (title)  -->
      </div>
        <section class="d-hello">
            <div class="card d-hello-card card-border">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-12 mb-4 pb-2">
                            <div class="d-hello--item">
                                <div class="dh-right">
                                    <div class="text-1">
                                        Hello <span class="i-color pe-2"> {{ user["username"]}} !</span> Welcome to {{ site["site_name"] }}!
                                    </div>
                                </div>
                            </div>
                            <div class="divider"></div>
                        </div>
                        <div class="col-lg">
                            <div class="row row-cols-1 row-cols-xl-4 row-cols-lg-3 row-cols-md-2 align-items-center">
                                <div class="col">
                                    <div class="d-hello--item">
                                        <div class="icon-wrapper">
                                            <div class="dh-icon icon-primary">
                                                <i class="ri-vip-crown-2-line"></i>
                                            </div>
                                        </div>
                                        <div class="dh-right">
                                            <div class="text-3">
                                                Account Status
                                            </div> 
                                          <div class="text-2">
                                                Active
                                            </div>
                                            <div class="text-2" id="accStats"></div>
                                        </div>
                                    </div>
                                </div><!-- ./col -->
                                <div class="col">
                                    <div class="d-hello--item">
                                        <div class="icon-wrapper">
                                            <div class="dh-icon icon-secondary">
                                                <i class="ri-vip-crown-2-line"></i>
                                            </div>
                                        </div>
                                        <div class="dh-right">
                                            <div class="text-3">
                                                Total orders
                                            </div>
                                            <div class="text-2 oq_text">
                                               {{ AllOrders}} 
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- ./col -->
                                <div class="col">
                                    <div class="d-hello--item">
                                        <div class="icon-wrapper">
                                            <div class="dh-icon icon-warning">
                                                <i class="ri-vip-crown-2-line"></i>
                                            </div>
                                        </div>
                                        <div class="dh-right">
                                            <div class="text-3">
                                                Balance
                                            </div>
                                            <div class="text-2">
                                                {{ currency["symbol"] }}{{ (user['balance']*currency["value" ]) }}
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- ./col -->
                                <div class="col">
                                    <div class="d-hello--item">
                                        <div class="icon-wrapper">
                                            <div class="dh-icon icon-info">
                                                <i class="ri-vip-crown-2-line"></i>
                                            </div>
                                        </div>
                                        <div class="dh-right">
                                            <div class="text-3">
                                                Total Expenses
                                            </div>
                                            <div class="text-2">
                                            {{ currency["symbol"]  }} {{ (user["spent"]*currency["value"]) |round(7, 'floor') }} 
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- ./col -->
                            </div><!-- ./row () -->
                        </div><!-- ./col (right) -->
                    </div>
                </div>
            </div>
        </section><!-- ./d-hello -->
        <section class="neworder-main pt-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-border mt-5 mt-md-0 mb-4">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="d-icon i-primary me-3">
                                    <i class="ri-vip-crown-2-line"></i>
                                </div>
                                <span class="fw-600">New order</span>
                            </div>
                        </div><!-- ./card (title)  -->
                    </div>
            
                    <div class="card card-border">
                        <div class="card-body">
                          <div id="noc-wrapper" class="mb-4">
                          <div id="new-order-cats" class="swiper">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide">
                                    <a class="d-cat-btn active" data-change-cat="">
                                        <i class="ri-user-4-line icon me-3"></i>
                                        <span class="text">All Services</span>
                                    </a>
                                </div>
                                <div class="swiper-slide">
                                    <a class="d-cat-btn" data-change-cat="Instagram">
                                        <i class="ri-user-4-line icon me-3"></i>
                                        <span class="text">Instagram</span>
                                    </a>
                                </div>
                               
                                <div class="swiper-slide">
                                    <a class="d-cat-btn" data-change-cat="Tiktok">
                                        <i class="ri-user-4-line icon me-3"></i>
                                        <span class="text">TikTok</span>
                                    </a>
                                </div>
                                <div class="swiper-slide">
                                    <a class="d-cat-btn" data-change-cat="Youtube">
                                        <i class="ri-user-4-line icon me-3"></i>
                                        <span class="text">Youtube</span>
                                    </a>
                                </div>
                                <div class="swiper-slide">
                                    <a class="d-cat-btn" data-change-cat="Facebook">
                                        <i class="ri-user-4-line icon me-3"></i>
                                        <span class="text">Facebook</span>
                                    </a>
                                </div>
                                
                            </div>
                        </div><!-- swiper -->
                      </div>



  {% if error %}
      <div class="flex justify-between p-2 mb-4 text-sm font-medium text-gray-200 bg-red-600 rounded alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ errorText }}
          </div>
    {% endif %}

    {% if data["order"]["success"] == 1 %}
      <div class="alert alert-dismissible alert-success">
          
         
          
          <strong> {{ lang["neworder.success.id"] }}: </strong> {{ data['order']['id'] }} <br>
          <strong> {{ lang["neworder.success.service"] }}: </strong> {{ data['order']['service'] }} <br>
          <strong> {{ lang["neworder.success.link"] }}: </strong> {{ data['order']['link'] }} <br>
          <strong> {{ lang["neworder.success.quantity"] }}: </strong> {{ data['order']['quantity'] }} <br>
          <strong> {{ lang["neworder.success.charge"] }}: </strong>

{{ currency['symbol'] }}{{ (data['order']['price']*currency["value"]) }}
 <br>
          <strong> {{ lang["neworder.success.balance"] }}: </strong>{{ data['order']['balance'] }} <br>
          
         
          
          
          
          
      </div>
    {% endif %}
    {% if data["order"]["success"] == 2 %}
      <div class="alert alert-dismissible alert-success">
         <strong> {{ lang["neworder.success.id"] }}: </strong> {{ data['order']['id'] }} <br>
         <strong> {{ lang["neworder.success.service"] }}: </strong> {{ data['order']['service'] }} <br>
         <strong> {{ lang["neworder.success.username"] }}: </strong> {{ data['order']['link'] }} <br>
         <strong> {{ lang["neworder.success.quantity"] }}: </strong> {{ data['order']['min'] }} - {{ data['order']['max'] }} <br>
         <strong> {{ lang["neworder.success.posts"] }}: </strong> {{ data['order']['posts'] }} <br>
         <strong> {{ lang["neworder.success.delay"] }}: </strong>{{ data['order']['delay'] }} <br>
         
     
        
        
       </div>
    {% endif %}



        <form method="post" action="">
<div class="component_button_forms">
            <div class="form-group">
              <label for="mb-2" class="form-label">
                                                <div class="d-flex align-items-center">
                                                    <div class="d-icon i-primary me-2">
                                                        <i class="ri-vip-crown-2-line"></i>
                                                    </div>
                                                    <span class="p-color fw-600">Category</span>
                                                </div>
                                            </label>
              <select class="form-control" id="neworder_category" name="categories">
                {% for category in categories %}
                    <option value="{{ category["category_id"] }}" {% if category["category_id"] == data['categories'] %} selected {% endif %}>{{ category["category_name"] }}</option>
                {% endfor %}
                </select>
</div>

             
            </div>
            <div class="form-group">
              <label for="mb-2" class="form-label">
                                                <div class="d-flex align-items-center">
                                                    <div class="d-icon i-info me-2">
                                                        <i class="ri-vip-crown-2-line"></i>
                                                    </div>
                                                    <span class="i-color fw-600">Service</span>
                                                </div>
                                            </label>
              <select class="form-control" id="neworder_services" name="services">

              </select>
            </div>





            <div id="neworder_fields"></div>


<div class="form-group" id="charge_div">
              <label for="charge" class="control-label">{{ lang["neworder.charge"] }}</label>
              <input type="text" class="form-control" id="charge" readonly>
            </div>




          
          <button type="submit" class="btn btn-primary btn-border btn-block">{{ lang["neworder.button"] }}</button>
</form>










    



